<h1 class=edit>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>

<% if @book.errors.any? %>
<div class=error>
  <h4><%= pluralize(@book.errors.count, "error") %>  prohibited this book from being saved:</h4>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
</div>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <P>
  <%= f.submit 'Update Book' %>
  </P>
  <p>
    <%= link_to "Show", book_path(@book) %>
    <%= "|" %>
    <%= link_to "Back", books_path %>
  </p>
<% end %>